
<!-- ======= Blog Section ======= -->
<section id="blog" class="blog">
    <div class="container">

        <div class="row">

            <div class="col-lg-8 entries">

                <ul>

                    {%- for post in collections.featured | reverse -%}

                        <li>

                            <article class="entry" data-aos="fade-up">

                                <div class="entry-img">
                                    <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="img-fluid">
                                </div>
                                <h2 class="entry-title">
                                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                                </h2>
                                <div class="entry-meta">
                                    <ul>
                                    <li class="d-flex align-items-center"><i class="icofont-user"></i> <a href="{{ post.url }}">{{ post.data.author }}</a></li>
                                    <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <a href="{{ post.url }}"><time datetime="2020-01-01">{{ post.date | postDate }}</time></a></li>
                                    <li class="d-flex align-items-center"><i class="icofont-comment"></i> <a href="{{ post.url }}">{{ post.data.comments }}</a></li>
                                    </ul>
                                </div>

                                <div class="entry-content">
                                    <p>
                                    {{ post.data.description }}
                                    </p>
                                    <div class="read-more">
                                    <a href="{{ post.url }}">Read More</a>
                                    </div>
                                </div>

                            </article>

                        </li>

                    {%- endfor -%}
                
                </ul>

            </div><!-- End blog entries list -->

            <div class="col-lg-4">

            <div class="sidebar" data-aos="fade-left">

                <h3 class="sidebar-title">Search</h3>
                <div class="sidebar-item search-form">
                <form action="">
                    <input type="text">
                    <button type="submit"><i class="icofont-search"></i></button>
                </form>

                </div><!-- End sidebar search formn-->

                <h3 class="sidebar-title">Categories</h3>
                <div class="sidebar-item categories">
                <ul>
                    <li><a href="#">General <span>(25)</span></a></li>
                    <li><a href="#">Lifestyle <span>(12)</span></a></li>
                    <li><a href="#">Travel <span>(5)</span></a></li>
                    <li><a href="#">Design <span>(22)</span></a></li>
                    <li><a href="#">Creative <span>(8)</span></a></li>
                    <li><a href="#">Education <span>(14)</span></a></li>
                </ul>

                </div><!-- End sidebar categories-->

                

                <h3 class="sidebar-title">Recent Posts</h3>
                <div class="sidebar-item recent-posts">

                <ul>

                    {%- for post in collections.recent | reverse -%}

                    <li class="non-list">
                    <div class="post-item clearfix">
                        <img src="{{ post.data.recentImg }}" alt="{{ post.data.recentImgAlt }}">
                        <h4><a href="{{ post.url }}">{{ post.data.titleRec }}</a></h4>
                        <time datetime="2020-01-01">{{ post.date | postDate }}</time>
                    </div>

                </li>

            {%- endfor -%}

            </ul>

                </div><!-- End sidebar recent posts-->


                </div><!-- End sidebar tags-->

            </div><!-- End sidebar -->

            </div><!-- End blog sidebar -->

        </div>

    </div>
</section>
<!-- End Blog Section -->
